.coverage-indicator
  height: 34px;
  width: 180px;
  position relative

  .covered
  .complement
    width: 100%;
    height 100%
    float: left;
    box-sizing: border-box;

  .covered
    width: 60%
    background-color cross-light-green
  .complement
    width: 40%
    background-color cross-pink

  .percentage-text
    position: absolute;
    line-height: 1.2em;
    margin-left: 79px;
    font-size: 1.1em;
    font-weight: 600;
  .percentage-description
    position: absolute;
    line-height: 1.2em;
    margin-left: 55px;
    margin-top: 18px;
    font-size: 0.8em;

.coverage-indicator.high
  color: cross-green

.coverage-indicator.low
  color: cross-red
