.build-row
  border-style: solid;
  border-width: 2px;
  margin-bottom: 15px;
  height: 49px;
  box-sizing: border-box;
  cursor pointer
  overflow: hidden;
  .icon
    font-size: 32px;
    line-height: 32px;
    padding-top: 8px;
    padding-left: 7px;
  .text-cell
    padding-top: 10px;
  .build-details
    margin: 10px;
  .build-details-box
    border-style: solid;
    border-width: 3px;
    margin-left: 7px;
    margin-right: 7px;
    margin-top: 5px;
    width: 197px;
    height: 179px;
    box-shadow: 6px 6px 7px -2px rgba(0,0,0,0.54);
    padding: 5px;
    box-sizing: border-box;
    .arrow-box
      height: 68px;
      position: relative;
      .icon
        position: absolute;
        font-size: 67px;
        line-height: 67px;
        margin-left: 5px;
        padding-top: 0;
      .icon.horizontal
        color: #fed86e

      .arrow-number
        position: relative;
        color: #FFFFFF;
        text-align: center;
        margin-top: 14px;
        font-size: 1.3em;
        height: 32px;
      .arrow-number.horizontal
        color: black
      .arrow-text
        text-align: center;
        margin-top: 4px;
        color: black
      .arrow-text.maintainability
        margin-left -5px
      .icon-up
        color: cross-green
      .icon-down
        color: cross-red
    .icon-build
      font-size: 4em;
      line-height: 20px;
      text-align: center;
    .build-text
      text-align center
    .build-icons-container
      margin-top 10px
    .build-time
      margin-top 26px
      text-align center
    .build-success
      color: cross-green
    .build-failed
      color: cross-red
  .build-details-header
    font-size: 1.2em;
    font-weight: 600;
    line-height: 1em;
  .details-box-waiting
    font-size: 2em;
    margin-top: 30px;
    text-align: center;
  .test-passed-percentage
    font-size: 2.3em;
    margin-top: 20px;
    line-height: 1em;
  .test-passed-text
    font-size 0.8em
  .test-chart-container
    margin-top 4px

.expand-animation {
  transition:0.1s ease-in height;
  height: 49px;
}
.expand-animation.expanded {
  height: 269px;
}

.build-row.pending
  color cross-super-grey
  border-color cross-super-grey
  background: #ebf0f7; /* Old browsers */
  background: -moz-linear-gradient(-45deg, #ebf0f7 0%, #ffffff 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(-45deg, #ebf0f7 0%,#ffffff 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(135deg, #ebf0f7 0%,#ffffff 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

