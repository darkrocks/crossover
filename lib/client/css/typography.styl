h1, h2, h3, h4, h5, h6 {
  margin-top: 0;
  margin-bottom: 2em;
  font-weight: 300; }
h1 { font-size: 5.0em; line-height: 1.2;  letter-spacing: -.1em;}
h2 { font-size: 4.2em; line-height: 1.25; letter-spacing: -.1em; }
h3 { font-size: 3.6em; line-height: 1.3;  letter-spacing: -.1em; }
h4 { font-size: 3.0em; line-height: 1.35; letter-spacing: -.08em; }
h5 { font-size: 2.4em; line-height: 1.5;  letter-spacing: -.05em; }
h6 { font-size: 1.5em; line-height: 1.6;  letter-spacing: 0; }

p {
  margin-top: 0; }
