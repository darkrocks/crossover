.build-row
  border-style: solid;
  border-width: 2px;
  margin-bottom: 15px;
  height: 45px;
  .icon
    font-size: 32px;
    line-height: 32px;
    padding-top: 8px;
    padding-left: 7px;
  .text-cell
    padding-top: 10px;

.build-row.pending
  color cross-super-grey
  border-color cross-super-grey

.build-row.running
  color cross-blue
  border-color cross-blue

.build-row.complete
  color cross-green
  border-color cross-green

.build-row.rejected
  color cross-red
  border-color cross-red
